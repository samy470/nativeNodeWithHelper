<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-3">

  <h1 class="mb-3">Users API</h1>

  <!-- Users List -->
  <div class="mb-3">
    <h4>Users</h4>
    {{#each users}} 
      <div class="badge bg-secondary m-1">{{this.id}}: {{this.email}}, {{this.name}}</div>
    {{/each}}
  </div>

  <!-- Add User -->
  <form action="/users" method="post">
    <input name="email" class="form-control mb-2" placeholder="Email">
    <input name="name" class="form-control mb-2" placeholder="Name">
    <button type="submit" class="btn btn-sm btn-success">Add</button>
  </form>
  
  <!-- Update User -->
  <form action="/users/update" method="post">

    <input name="id" class="form-control mb-2" placeholder="User ID">
    <input name="email" class="form-control mb-2" placeholder="New Email">
    <input name="name" class="form-control mb-2" placeholder="New Name">
    <button type="submit" class="btn btn-sm btn-primary">Update</button>
  </form>

  <!-- Delete User -->
  <form action="/users/delete" method="post">
    <input name="id" class="form-control mb-2" placeholder="User ID">
    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
  </form>
  <!-- Results -->
  <div id="result" class="alert alert-info" style="display: none;"></div>
</body>

</html>